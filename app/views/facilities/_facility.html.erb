  <div class="facility-wrapper d-flex mt-5 p-3">
    <div class="image-wrapper ms-3">
      <%= image_tag(facility.image.present? ? facility.image.url : 'sample.png', width: "200px", height: "150px" ) %>
      <%# <%= image_tag facility.image_url, class: "", width: "300", height:"200" %>
    </div>
    <div class="ms-3">
      <h3><%= link_to facility.title, facility_path(facility) %></h3>
      <div>
        <p><%= facility.business_hours %></p>
        <p><%= facility.address %></p>
        <%# <p></p> 削除検討中%>
      </div>
    </div>
  </div>
</div>