<div class="header">
  <div class="logo">
    <h1>Yochiyochi</h1>
    <div class="sub-title">
      <h6 class="sub-title-up">カワイイ<h6>
      <h6 class="sub-title-down">わが子と<h6>
      <h6 class="sub-title-up">どこへ<h6>
      <h6 class="sub-title-down">行こう?<h6>
    </div>
    <%= image_tag "yochiyochi.png", alt: "logo", width: "50px", height: "50px" %>
  </div>
  <div class="btn-wrapper">
    <% if logged_in? %>
      <%= link_to "お気に入り一覧", '#', class:"btn btn-success" %>
      <%= link_to "マイページ", '#', class:"btn btn-success" %>
      <%= link_to "ログアウト", logout_path, class:"btn btn-success", data: { turbo_method: :delete } %>
    <% else %>
      <%= link_to "ログイン", login_path, class:"btn btn-success" %>
      <%= link_to "新規会員登録", new_user_path, class:"btn btn-success" %>
    <% end %>
  </div>
</div>
<div class="sp-sub-title">
  <h6 class="sp-sub-title-up">カワイイ<h6>
  <h6 class="sp-sub-title-down">わが子と<h6>
